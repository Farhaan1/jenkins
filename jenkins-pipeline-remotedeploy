pipeline {
    agent any
     environment {
    PATH = "/opt/apache-maven-3.9.5/bin:${PATH}"
     }
      stages {
        stage('clone code') {
            steps {
               git 'https://github.com/Farhaan1/jenkins.git'
            }
        }
        stage('Build package') {
            steps {
                sh 'mvn clean package'
            }
        }  
    }
 post {
        always {
             emailext body: '$DEFAULT_BODY', subject: '$DEFAULT_SUBJECT', to: '$DEFAULT_REPLYTO'
        }
    }
}
